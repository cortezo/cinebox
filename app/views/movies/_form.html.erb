<div class='well col-md-3'>
  <%= form_for @movie do |f| %>
    <div class='form-group'>
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>
    <div class='form-group'>
      <%= f.label :file_loc %>
      <%= f.text_field :file_loc, class: 'form-control' %>
    </div>
    <div class='form-group' %>
      <%= f.label :genre %>
      <%= f.collection_select :genre_id, Genre.all, :id, :name, {prompt: "Select a Genre"}, {class: 'form-control'} %>
    </div>
    <%= f.submit(@movie.new_record? ? "Create Movie" : "Update Movie", class: 'btn btn-primary') %>
  <% end %>
</div>